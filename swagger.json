{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "To-Do App API",
    "description": "API documentation for the To-Do application"
  },
  "host": "localhost:3000",
  "basePath": "/",
  "schemes": ["http"],
  "paths": {
    "/todos": {
      "get": {
        "summary": "Retrieve all to-dos",
        "responses": {
          "200": {
            "description": "A list of to-dos",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "id": { "type": "string" },
                  "title": { "type": "string" },
                  "description": { "type": "string" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new to-do",
        "parameters": [
          {
            "in": "body",
            "name": "to-do",
            "schema": {
              "type": "object",
              "properties": {
                "title": { "type": "string" },
                "description": { "type": "string" }
              },
              "required": ["title"]
            }
          }
        ],
        "responses": {
          "201": {
            "description": "To-do created"
          }
        }
      }
    }
  }
}
